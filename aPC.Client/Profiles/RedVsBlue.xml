<?xml version="1.0"?>
<!--
This scene will first show all purple (with fans \ rumble), and then will get into a loop where
1. The RHS is red, the LHS is blue
2. Vice versa

It'll never repeat the all-purple "Frame" - this is what I mean by IsRepeated below.
-->
<amBXScene>
  <IsExclusive>false</IsExclusive>
  <SceneType>Sync</SceneType>
  <Frames>
    <Frame>
      <Fans>
        <FadeTime>200</FadeTime>
        <East />
        <West />
      </Fans>
      <IsRepeated>false</IsRepeated>
      <Length>2000</Length>
      <Lights>
        <FadeTime>100</FadeTime>
        <East>
          <Blue>0.5</Blue>
          <Green>0</Green>
          <Red>0.5</Red>
        </East>
        <North>
          <Blue>0.5</Blue>
          <Green>0</Green>
          <Red>0.5</Red>
        </North>
        <NorthEast>
          <Blue>0.5</Blue>
          <Green>0</Green>
          <Red>0.5</Red>
        </NorthEast>
        <NorthWest>
          <Blue>0.5</Blue>
          <Green>0</Green>
          <Red>0.5</Red>
        </NorthWest>
        <West>
          <Blue>0.5</Blue>
          <Green>0</Green>
          <Red>0.5</Red>
        </West>
      </Lights>
    </Frame>
    <Frame>
      <Fans>
        <FadeTime>200</FadeTime>
        <East />
        <West />
      </Fans>
      <IsRepeated>false</IsRepeated>
      <Length>10</Length>
    </Frame>
    <Frame>
      <IsRepeated>true</IsRepeated>
      <Length>1000</Length>
      <Lights>
        <FadeTime>100</FadeTime>
        <East>
          <Blue>1</Blue>
          <Green>0</Green>
          <Red>0</Red>
        </East>
        <North>
          <Blue>0.5</Blue>
          <Green>0</Green>
          <Red>0.5</Red>
        </North>
        <NorthEast>
          <Blue>1</Blue>
          <Green>0</Green>
          <Red>0</Red>
        </NorthEast>
        <NorthWest>
          <Blue>0</Blue>
          <Green>0</Green>
          <Red>1</Red>
        </NorthWest>
        <West>
          <Blue>0</Blue>
          <Green>0</Green>
          <Red>1</Red>
        </West>
      </Lights>
    </Frame>
    <Frame>
      <IsRepeated>true</IsRepeated>
      <Length>1000</Length>
      <Lights>
        <FadeTime>100</FadeTime>
        <East>
          <Blue>0</Blue>
          <Green>0</Green>
          <Red>1</Red>
        </East>
        <North>
          <Blue>0.5</Blue>
          <Green>0</Green>
          <Red>0.5</Red>
        </North>
        <NorthEast>
          <Blue>0</Blue>
          <Green>0</Green>
          <Red>1</Red>
        </NorthEast>
        <NorthWest>
          <Blue>1</Blue>
          <Green>0</Green>
          <Red>0</Red>
        </NorthWest>
        <West>
          <Blue>1</Blue>
          <Green>0</Green>
          <Red>0</Red>
        </West>
      </Lights>
    </Frame>
  </Frames>
</amBXScene>